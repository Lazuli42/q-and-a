<div class="container">

  <div class="row">
    <div class="col-xs-6">
      {{edit-question editQuestion="editQuestion" question=model}}
    </div>
    <div class="col-xs-6">
      <h1><span {{action 'destroyQuestion' model}} class="glyphicon glyph-click glyphicon-trash" aria-hidden="true"></span></h1>
     </div>
  </div>


  <h1>"{{model.title}}"</h1>
  <h4>- {{model.author}}</h4>
  <p>{{model.notes}}</p>

  {{new-answer saveAnswer="saveAnswer" question=model}}

  <hr>

  {{question-answers question=model}}

</div>
