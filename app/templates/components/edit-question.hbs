{{#if editingQuestion}}
  <form>
    <div class="form-group">
      <label for="title">Edit Question</label>
      {{input class="form-control" value=title id="title" placeholder=question.title}}

      <label for="questionAuthor">Edit Name</label>
      {{input class="form-control" value=questionAuthor id="questionAuthor" placeholder=question.author}}

      <label for="notes">Edit Additional Info</label>
      {{textarea class="form-control" value=notes id="notes" placeholder=question.notes}}
    </div>

    <button {{action 'editQuestion' question}} class="btn btn-success" type="submit">Update</button>
  </form>
<br>
{{else}}
  <h1><span {{action 'showEditForm'}} class="glyphicon glyph-click glyphicon-edit" aria-hidden="true"></span></h1>
{{/if}}
