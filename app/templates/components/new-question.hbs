{{#if showQuestionForm}}
  <h1>Ask a Question</h1>
  <form>
    <div class="form-group">
      <label for="title">Question</label>
      {{input class="form-control" value=title id="title"}}

      <label for="questionAuthor">Your Name</label>
      {{input class="form-control" value=questionAuthor id="questionAuthor"}}

      <label for="notes">Additional Info</label>
      {{input class="form-control" value=notes id="notes"}}
    </div>

    <button {{action 'saveQuestion1'}} class="btn btn-success" type="submit">Submit</button>
  </form>
{{else}}
  <button {{action 'revealQuestionForm'}} class="btn btn-primary btn-lg center-block">Ask a Question</button>
{{/if}}
